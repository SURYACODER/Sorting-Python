###Shell sort in python 
def sort(arr, n):

    gap = int(n/2)

    while gap > 0:

        for i in range(gap, n):

            ele = arr[i]

            j = i

            while j >= gap and arr[j - gap] > ele:

                arr[j] = arr[j - gap]

                j -= gap

            arr[j] = ele

        gap /= 2

        gap = int(gap)

ip_arr = [4, 1, 15, 2, 71]

sort(ip_arr, len(ip_arr))

print("The sorted array is :")

for i in range(len(ip_arr)):

    print(ip_arr[i])
